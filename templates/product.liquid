{% comment %} <h1>
      {{ product.title }}
    </h1>
    <p>
      {{ product.price | money }}
    </p>
    <div>
      {{ product.description }}
    </div>
    
    {% form 'product'
      , product %}
      <select name="id" id="">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}">
            {{ variant.title }}
          </option>
        {% endfor %}
      </select>
      <button type="submit">{{ 'General.add_to_cart' | t }}</button>
{% endform %} {% endcomment %}

<div>
  {% section 'product' %}
</div>